<h1 align="center">Create a new category</h1>

<%= render 'shared/errors', obj: @category %>
    
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 text-left">
            <%= form_for @category, :html => { class: "form-horizontal", role: "form" } do |f| %>
                <div class="form-group">
                    <%= f.label :name, :class=> 'control-label col-sm-4' %>
                    <div class="col-sm-4">
                        <%= f.text_field :name, :class=> 'form-control', :placeholder=> 'Category name', :autofocus=> 'true' %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4">
                        <%= f.submit class: "btn btn-primary" %>
                        <%= link_to "Back", root_path, class: "btn btn-warning" %> 
                    </div>
                </div>
            
            <% end %>
        </div>
    </div>