<%= render 'shared/errors', obj: @user %>
    
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 text-left">
            <%= form_for @user, :html => { class: "form-horizontal", role: "form" } do |f| %>
                <div class="form-group">
                    <%= f.label :username, :class=> 'control-label col-sm-4' %>
                    <div class="col-sm-4">
                        <%= f.text_field :username, :class=> 'form-control', :placeholder=> 'Enter your username', :autofocus=> 'true' %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :email, :class=> 'control-label col-sm-4' %>
                    <div class="col-sm-4">
                        <%= f.text_field :email, :class=> 'form-control', :placeholder=> 'Enter your email' %>
                    </div>
                </div>
                <div class="form-group padding-bottom">
                    <%= f.label :password, :class=> 'control-label col-sm-4' %>
                    <div class="col-sm-4">
                        <%= f.text_field :password, :class=> 'form-control', :placeholder=> 'Set a password' %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4">
                        <%= f.submit(@user.new_record? ? "Sign Up":"Update", class: "btn btn-primary") %>
                        <%= link_to "Back", root_path, class: "btn btn-warning" %> 
                    </div>
                </div>
            
            <% end %>
        </div>
    </div>