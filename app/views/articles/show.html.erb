<div class="container">
    
    <h1 class="m-5" align="center">Showing selected article</h1>
    
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 mx-auto">  
            <h3>
                Title: <br>
                <%= @article.title %>
            </h3>
            <p class="lead text-left">
                Description: <br> 
                <%= @article.description %>
            </p>
            <button class="mt-3 btn"><%= link_to "Edit this Article", edit_article_path(@article) %></button>
            <button class="mt-3 btn"><%= link_to "Back to Listing", articles_path %></button>
        </div>
    </div>
</div>