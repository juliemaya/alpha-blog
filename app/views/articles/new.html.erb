<div class="container">

<h1 class="m-5">Create an article</h1>

<div class="row">
    <div class="col-3 mx-auto">
        <%= form_for @article do |f| %>
        
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, :class=> 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, :class=> 'form-control' %>
        </div>
        
        <%= f.submit %>
        <% end %>
    </div>
</div>



</div>