<div class="container">

<h1 class="m-5">Create an article</h1>

<div class="row">
    <div class="col-6 mx-auto text-left">
        <% if @article.errors.any? %>
        <h5>The following errors prevented the article from getting created:</h5>
            <ul class="list-group list-group-flush pb-5">
                <% @article.errors.full_messages.each do |msg| %>
                    <li class="list-group-item list-group-item-danger"><%= msg %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
</div>
<div class="row">
    <div class="col-3 mx-auto">
        <%= form_for @article do |f| %>
        
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, :class=> 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, :class=> 'form-control' %>
        </div>
        
        <%= f.submit %>
        <% end %>
    </div>
</div>



</div>