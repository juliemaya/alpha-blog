<div class="container">
    
    <h1 class="m-5">Listing All Articles</h1>
    <p><%= link_to "Create new article", new_article_path %></p>
    <div class="row">
        <div class="col-6 mx-auto text-left">
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th colspan="2"></th>
            </tr>
            
            <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= truncate(article.description, length:30) { link_to "more", article_path(article) } %></td>
                <td><%= link_to 'Show', article_path(article) %>
                    <%= link_to 'Edit', edit_article_path(article) %></td>
            </tr>
            <% end %>
        </table>
        </div>
    </div>
</div>