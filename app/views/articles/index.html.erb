<div class="container">
    
    <h1 class="m-5">Listing All Articles</h1>
    
    <%= link_to "Create new article", new_article_path, class:"btn btn-primary" %>
    
    <div class="row padding">
        <div class="col-6 mx-auto text-left">
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th colspan="3"></th>
            </tr>
            
            <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= truncate(article.description, length:30) { link_to "more", article_path(article) } %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </table>
        </div>
    </div>
</div>